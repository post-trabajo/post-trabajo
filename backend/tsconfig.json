{
  "compilerOptions": {
    "target": "ES2016",
    "lib": ["ES6"],

    "module": "CommonJS",
    "rootDir": "src",
    "resolveJsonModule": true,

    "allowJs": true,
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  }
}
